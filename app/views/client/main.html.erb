<div>
  <br>
  <div class="col-xs-7">
    <div class="row text-center">
      <video id="video" src="videos/1.mp4" type="video/mp4" width="640" height="360"></video>
    </div>
    <br>
    <div class="row">
      <div class="col-xs-4 text-center">
        <button type="button" class="btn btn-primary btn-lg" style="width:160px;" ng-click="processChunk('videos/1.mp4')">1</button>
      </div>
      <div class="col-xs-4 text-center">
        <button type="button" class="btn btn-primary btn-lg" style="width:160px;" ng-click="processChunk('videos/2.mp4')">2</button>
      </div>
      <div class="col-xs-4 text-center">
        <button type="button" class="btn btn-primary btn-lg" style="width:160px;" ng-click="processChunk('videos/3.mp4')">3</button>
      </div>
    </div>
  </div>
  <div class="col-xs-5">
    <div class="row">
      <div class="col-xs-3">
        <button type="button" class="btn btn-danger btn-lg" ng-click="startRecording()">{{recBtnText}}</button>
      </div>
    </div>
    <br>
    <div class="row" ng-show="canSave">
      <div class="col-xs-8">
        <input type="text" id="record_name" ng-model="name" class="form-control">
      </div>
      <div class="col-xs-4">
        <button type="button" class="btn" ng-click="save()">Save</button>
      </div>
    </div>
    <br>
    <div class="row" ng-repeat="(key, record) in records">
      <div class="col-xs-8">
        {{record.name}}
      </div>
      <div class="col-xs-4">
        <button type="button" class="btn" ng-click="playRecord(record.id)">Play</button>
      </div>
      <br>
      <br>
    </div>
  </div>
</div>
