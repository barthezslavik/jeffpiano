<div>
  <br>
  <div class="col-xs-7">
    <div class="row">
      <video id="video" ng-src="{{source}}" type="video/mp4" width="640" height="360"></video>
    </div>
    <br>
    <div class="row">
      <div class="col-xs-4">
        <button type="button" class="btn btn-success btn-lg w-160" ng-click="playVideo(1)">1</button>
      </div>
      <div class="col-xs-4">
        <button type="button" class="btn btn-success btn-lg w-160" ng-click="playVideo(2)">2</button>
      </div>
      <div class="col-xs-4">
        <button type="button" class="btn btn-success btn-lg w-160" ng-click="playVideo(3)">3</button>
      </div>
    </div>
  </div>
  <div class="col-xs-5">
    <div class="row">
      <div class="col-xs-12">
        <button type="button" class="btn btn-danger btn-lg" ng-click="recording()">{{recBtnText}}</button>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-xs-8">
        <input type="text" class="form-control">
      </div>
      <div class="col-xs-4">
        <button type="button" class="btn">Save</button>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-xs-8">
        Text 1
      </div>
      <div class="col-xs-4">
        <button type="button" class="btn">Play</button>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-xs-8">
        Text 2
      </div>
      <div class="col-xs-4">
        <button type="button" class="btn">Play</button>
      </div>
    </div>
  </div>
</div>
