<p id="notice"><%= notice %></p>

<h1>Chunks</h1>

<table>
  <thead>
    <tr>
      <th>Record</th>
      <th>Start at</th>
      <th>Source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chunks.each do |chunk| %>
      <tr>
        <td><%= chunk.record_id %></td>
        <td><%= chunk.start_at %></td>
        <td><%= chunk.source %></td>
        <td><%= link_to 'Show', chunk %></td>
        <td><%= link_to 'Edit', edit_chunk_path(chunk) %></td>
        <td><%= link_to 'Destroy', chunk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chunk', new_chunk_path %>
